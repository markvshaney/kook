{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    ".next",
    "**/*.js",
    "**/*.mjs",
    "jest.config.mjs",
    "jest.setup.mjs",
    "__mocks__",
    "db/schema/**",
    "db/db.ts",
    "drizzle.config.ts",
    "lib/ai/lora.ts"
  ]
}
