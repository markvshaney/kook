{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "jest.setup.js"
    ],
    "exclude": [
        "node_modules"
    ]
}